{
  "name": "rowan",
  "type": "module",
  "version": "2.1.0",
  "description": "A lightweight async middleware library",
  "main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "eslint src test --ext .ts",
    "clean": "rimraf .tmp .nyc_output coverage dist",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --project tsconfig.build.json --rootDir src/ --outDir ./dist/esm --module es2022",
    "build:cjs": "tsc --project tsconfig.build.json --rootDir src/ --outDir ./dist/cjs --module commonjs --declaration false && node -e \"require('fs').writeFileSync('dist/cjs/package.json', '{\\\"type\\\":\\\"commonjs\\\"}')\"",
    "debug": "npm run clean && tsc --project tsconfig.json --outDir ./.tmp/ --module commonjs",
    "test": "mocha test/**/*.spec.ts",
    "test:cover": "c8 --reporter=html --reporter=lcov --reporter=json-summary npm test",
    "prepublishOnly": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MeirionHughes/rowan.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "task",
    "middleware",
    "async",
    "await",
    "typescript",
    "es2017"
  ],
  "author": "Meirion Hughes <crakinshot@yahoo.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MeirionHughes/rowan/issues"
  },
  "homepage": "https://github.com/MeirionHughes/rowan#readme",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "c8": "^9.0.0",
    "chai": "^5.0.0",
    "eslint": "^9.33.0",
    "mocha": "^11.0.0",
    "rimraf": "^5.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
