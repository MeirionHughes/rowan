{
  "name": "rowan",
  "version": "2.0.0",
  "description": "A lightweight async middleware library",
  "type": "module",
  "main": "./dist/commonjs/index.js",
  "module": "./dist/esm/index.js",
  "typings": "./dist/esm/index.d.ts",
  "exports" : {
    "import": "./dist/esm/index.js",
    "require": "./dist/commonjs/index.js"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "clean": "rimraf .tmp .nyc_output coverage dist",
    "build": "yarn run clean && concurrently \"yarn run build:esm\" \"yarn run build:commonjs\"",
    "build:esm": "tsc --project tsconfig.build.esm.json --rootDir src/ --outDir ./dist/esm",
    "build:commonjs": "tsc --project tsconfig.build.cjs.json --rootDir src/ --outDir ./dist/commonjs",
    "debug": "yarn run clean && tsc --project tsconfig.json --outDir ./.tmp/ --module commonjs ",
    "test": "c8 -r none mocha test/**/*.ts",
    "cover": "c8 --check-coverage mocha test/**/*.ts",
    "prepublishOnly": "yarn run test && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MeirionHughes/rowan.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "task",
    "middleware",
    "async",
    "await",
    "typescript",
    "es2017"
  ],
  "author": "Meirion Hughes <crakinshot@yahoo.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MeirionHughes/rowan/issues"
  },
  "homepage": "https://github.com/MeirionHughes/rowan#readme",
  "devDependencies": {
    "@types/chai": "latest",
    "@types/mocha": "latest",
    "@types/node": "latest",
    "chai": "latest",
    "codecov": "latest",
    "concurrently": "latest",
    "cross-env": "latest",
    "mocha": "latest",
    "c8": "latest",
    "rimraf": "latest",
    "ts-node": "latest",
    "tslint": "^5.15.0",
    "typescript": "latest"
  },
  "dependencies": {},
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "dist/"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register",
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
