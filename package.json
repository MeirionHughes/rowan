{
  "name": "rowan",
  "version": "0.2.1",
  "description": "A lightweight asynchronous task-middleware library",
  "main": "lib/rowan.js",
  "typings": "lib/rowan.d.ts",
  "scripts": {
    "pretest": "npm run clean && npm run lint",
    "test": "nyc node_modules/mocha/bin/_mocha --compilers ts:ts-node/register ./test/*.ts",
    "posttest": "npm run build && npm run minify && npm run example",
    "example": "node --harmony-async-await example",
    "cover": "codecov",
    "build": "tsc --declaration --importHelpers --lib es2015 --outDir ./lib --module commonjs --target es5 ./src/rowan.ts",
    "minify": "minify ./lib/rowan.js >> ./lib/rowan.min.js",
    "prepare-release": "npm test",
    "clean": "rimraf coverage .nyc_output lib",
    "lint": "tslint ./src/*.ts ./test/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MeirionHughes/rowan.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "task",
    "middleware",
    "async",
    "await",
    "typescript",
    "typed",
    "es2017"
  ],
  "author": "Meirion Hughes <crakinshot@yahoo.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MeirionHughes/rowan/issues"
  },
  "homepage": "https://github.com/MeirionHughes/rowan#readme",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.38",
    "@types/node": "^6.0.59",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "minify": "^2.0.13",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "rimraf": "^2.5.4",
    "ts-node": "^2.0.0",
    "tslint": "^4.3.1",
    "typescript": "^2.1.5"
  },
  "dependencies": {
    "tslib": "^1.5.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "dist/"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
