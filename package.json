{
  "name": "rowan",
  "version": "1.0.0",
  "description": "A lightweight async middleware library",
  "main": "dist/commonjs/rowan.js",
  "typings": "dist/commonjs/rowan.d.ts",
  "scripts": {
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "clean": "rimraf .tmp .nyc_output coverage dist",
    "build": "yarn run clean && concurrently \"yarn run build:es2017\" \"yarn run build:es2015\" \"yarn run build:commonjs\"",
    "build:es2017": "tsc --project tsconfig.build.json --rootDir src/ --outDir ./dist/es2017 --module es2015 --target es2017",
    "build:es2015": "tsc --project tsconfig.build.json --rootDir src/ --outDir ./dist/es2015 --module es2015",
    "build:commonjs": "tsc --project tsconfig.build.json --rootDir src/ --outDir ./dist/commonjs --module commonjs --target es2017",
    "debug": "yarn run clean && tsc --project tsconfig.json --outDir ./.tmp/ --module commonjs ",
    "test": "nyc node_modules/mocha/bin/_mocha  test/*.ts",
    "cover": "codecov",
    "prepublishOnly": "yarn run test && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MeirionHughes/rowan.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "task",
    "middleware",
    "async",
    "await",
    "typescript",
    "typed",
    "es2017"
  ],
  "author": "Meirion Hughes <crakinshot@yahoo.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MeirionHughes/rowan/issues"
  },
  "homepage": "https://github.com/MeirionHughes/rowan#readme",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.38",
    "@types/node": "^6.0.59",
    "chai": "^3.5.0",
    "codecov": "^1.0.1",
    "concurrently": "^3.4.0",
    "cross-env": "^3.2.4",
    "minify": "^2.0.13",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "rimraf": "^2.5.4",
    "ts-node": "^3.2.0",
    "tslint": "^4.3.1",
    "typescript": "^2.4.1"
  },
  "dependencies": {},
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "dist/"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register",
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
